rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures the /clients collection, ensuring only admins can access client data.
     * @path /clients/{clientId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @principle Requires admin role for all access to client data.
     */
    match /clients/{clientId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the /clients/{clientId}/loans collection, ensuring only admins can manage client loans.
     * @path /clients/{clientId}/loans/{loanId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @principle Requires admin role for all access to loan data.
     */
    match /clients/{clientId}/loans/{loanId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the /clients/{clientId}/loans/{loanId}/payments collection, ensuring only admins can manage loan payments.
     * @path /clients/{clientId}/loans/{loanId}/payments/{paymentId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @principle Requires admin role for all access to payment data.
     */
    match /clients/{clientId}/loans/{loanId}/payments/{paymentId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the /cash_flow collection, allowing only admins to manage cash flow transactions.
     * @path /cash_flow/{cashFlowId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @principle Requires admin role for all cash flow data access.
     */
    match /cash_flow/{cashFlowId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Secures the /cashier_performance collection, restricting access to admins only.
     * @path /cashier_performance/{cashierPerformanceId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @principle Requires admin role for access to cashier performance data.
     */
    match /cashier_performance/{cashierPerformanceId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Secures the /users collection, allowing users to create their own profiles and admins to read/manage all profiles.
     * @path /users/{userId}
     * @allow (create) If the user is creating their own profile (userId matches auth.uid).
     * @allow (get) If the user is an admin or the user is the owner of the profile.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @allow (update) If the user is an admin or the user is the owner of the profile.
     * @deny (update) If the user is not an admin.
     * @principle Enforces self-creation and admin-only management of user profiles.
     */
    match /users/{userId} {
      allow get: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Secures the /roles_admin collection, allowing only admins to manage admin roles.
     * @path /roles_admin/{userId}
     * @allow (get) If the user is an admin.
     * @deny (get) If the user is not an admin.
     * @allow (list) If the user is an admin.
     * @deny (list) If the user is not an admin.
     * @allow (create) If the user is an admin.
     * @deny (create) If the user is not an admin.
     * @allow (update) If the user is an admin.
     * @deny (update) If the user is not an admin.
     * @principle Requires admin role for all modifications.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ----- Helper functions -----

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is an admin.
     * @return {boolean} True if the user has a document in the `roles_admin` collection, false otherwise.
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId - The user ID to compare against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
        return request.auth.uid == userId;
    }
  }
}