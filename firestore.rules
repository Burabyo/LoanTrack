/**
 * @file Overview
 * This ruleset enforces a strict user-ownership model and role-based access control for sensitive data.
 *
 * Data Structure:
 * - Clients: Stored in `/clients/{clientId}`.
 * - Loans: Stored in `/clients/{clientId}/loans/{loanId}`.
 * - Payments: Stored in `/clients/{clientId}/loans/{loanId}/payments/{paymentId}`.
 * - Cash Flow: Stored in `/cash_flow/{cashFlowId}`.
 * - Cashier Performance: Stored in `/cashier_performance/{cashierPerformanceId}`.
 * - Users: Stored in `/users/{userId}`.
 * - Admin Roles: Stored in `/roles_admin/{userId}`.
 *
 * Key Security Decisions:
 * - Listing of clients and cash flow is disallowed.
 * - User documents can only be created by themselves.
 * - Admin role is determined by the existence of a document in `/roles_admin/{userId}`.
 * - Read and write access to client, loan, and payment information is implicitly denied to non-owners.
 *
 * Denormalization for Authorization:
 * - Loan documents contain `clientId` for authorization within the `/clients/{clientId}/loans/{loanId}` path.
 * - Payment documents contain `loanId` and `clientId` for authorization within the `/clients/{clientId}/loans/{loanId}/payments/{paymentId}` path.
 * - Cashier Performance documents contain `cashierId` for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows read access to admin roles.
     * @path /roles_admin/{userId}
     * @allow (get) User with matching userId to the document ID.
     * @deny (get) User with non matching userId to the document ID.
     * @principle Enforces user ownership for reads.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows users to read and write their own user documents.
     * @path /users/{userId}
     * @allow (create) User with matching userId to the document ID.
     * @deny (create) User with non matching userId to the document ID.
     * @principle Enforces user ownership for writes.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows access to client documents.
     * @path /clients/{clientId}
     * @allow (get) Anyone
     * @deny (create) Anyone
     * @principle Allows public read access but restricts modifications
     */
    match /clients/{clientId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to loan documents under a specific client.
     * @path /clients/{clientId}/loans/{loanId}
     * @allow (get) Anyone
     * @deny (create) Anyone
     * @principle Allows public read access but restricts modifications
     */
    match /clients/{clientId}/loans/{loanId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to payment documents within a specific loan of a client.
     * @path /clients/{clientId}/loans/{loanId}/payments/{paymentId}
     * @allow (get) Anyone
     * @deny (create) Anyone
     * @principle Allows public read access but restricts modifications
     */
    match /clients/{clientId}/loans/{loanId}/payments/{paymentId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines security rules for cash flow documents.
     * @path /cash_flow/{cashFlowId}
     * @allow (get) Anyone
     * @deny (create) Anyone
     * @principle Allows public read access but restricts modifications
     */
    match /cash_flow/{cashFlowId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures cashier performance data, allowing access only to the cashier and admins.
     * @path /cashier_performance/{cashierPerformanceId}
     * @allow (get) Anyone
     * @deny (create) Anyone
     * @principle Allows public read access but restricts modifications
     */
    match /cashier_performance/{cashierPerformanceId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

   /**
     * @description Secures expenses data, allowing access only to authenticated users.
     * @path /expenses
     * @allow (list) Authenticated users can list expenses.
     */
    match /expenses {
      allow get: if false;
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return (isOwner(userId) && resource != null);
    }

  }
}